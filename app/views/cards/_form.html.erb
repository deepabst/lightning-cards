<%= form_with model: @card, local: true do |f| %>
  <%= f.label :deck_id %>
  <br>
  <%= f.collection_select :deck_id, Deck.where(user_id: @current_user.id), :id, :name, include_blank: true %>
  <br>
  <br>
  <%= f.label :front_text %>
  <br>
  <%= f.text_field :front_text %>
  <br>
  <br>
  <%= f.label :back_text %>
  <br>
  <%= f.text_field :back_text %>
  <br>
  <br>
  <%= f.submit %>
<% end %>
