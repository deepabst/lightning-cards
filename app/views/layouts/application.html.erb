<!DOCTYPE html>
<html>
  <head>
    <title>Lightning Cards</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <nav>
      <%= image_tag 'LC_Logo.svg', alt:'Lightning Cards Logo' %>
      <h1>Lightning Cards</h1>
      <% if @current_user.present? %>
        <p>Welcome back, <span class="username"><%= @current_user.name %></p>
        </span>
        <%= link_to 'Logout', login_path, method: 'delete' %>
        <%= link_to 'Build A Deck', new_deck_path  %>
        <%= link_to 'My Decks', decks_path %>
      <% else %>
        <%= link_to 'Login', login_path %>
        <%= link_to 'Sign Up', new_user_path %>
      <% end %>
      <%= link_to 'Home', root_path %>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
    <%# <button id="navtoggle" onclick="toggleNavBar()">Zen Mode</button> %>
    <footer>
      Dee Pabst 2022
    </footer>
  </body>
</html>
