<!DOCTYPE html>
<html>
  <head>
    <title>Lightning Cards</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <nav>
      <h1>Lightning Cards</h1>
      <% if @current_user.present? %>
        <p>Welcome back, <%= @current_user.name %></p>
        <%= link_to 'Logout', login_path, method: 'delete' %>
      <% else %>
        <%= link_to 'Login', login_path %>
        |
        <%= link_to 'Sign Up', new_user_path %>
      <% end %>
      <br>
      <%= link_to 'Home', root_path %>
      <%= link_to 'All Decks', decks_path %>
      <hr>
    </nav>
    <%= yield %>
    <footer>
      <hr>
      Dee Pabst 2022
    </footer>
  </body>
</html>
